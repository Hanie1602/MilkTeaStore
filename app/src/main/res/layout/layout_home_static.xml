<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:text="A Sip Filled with Delight"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3A2E2E"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Ô tìm kiếm -->
        <EditText
            android:hint="Search"
            android:drawableStart="@drawable/ic_search"
            android:background="@drawable/bg_input_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Danh mục loại trà -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Một mục danh mục -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:src="@drawable/logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />

                    <TextView
                        android:text="Milk Tea"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Thêm các loại khác như Fruit Tea, Frappe, ... -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Most Popular -->
        <TextView
            android:text="Most Popular"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Sản phẩm phổ biến -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#fff"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:src="#fff" />

                <TextView
                    android:text="Wintermelon"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:text="₱ 80.00"
                    android:textSize="14sp"
                    android:textColor="#444444" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#fff"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/milktea_1" />

                <TextView
                    android:text="Java Chip Frappe"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:text="₱ 90.00"
                    android:textSize="14sp"
                    android:textColor="#444444" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recommendation -->
        <TextView
            android:text="Recommendation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Có thể thêm dòng sản phẩm gợi ý ở đây -->
    </LinearLayout>
</ScrollView>
