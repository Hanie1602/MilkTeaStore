        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MilkTeaStore"
        tools:targetApi="31">
        <activity
            android:name=".controller.LoginRegister.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.MainActivity" />
        <activity android:name=".controller.LoginRegister.LoginActivity" />
        <activity android:name=".controller.LoginRegister.RegisterActivity" />

<!--        HOME SCREEN *******************************************-->
        <activity android:name=".controller.Home.HomeActivity" />
        <activity android:name=".controller.Home.DetailsActivity" />

<!--        PROFILE***********************************************-->
        <activity android:name=".controller.Profile.ProfileActivity" />
        <activity android:name=".controller.Profile.OrderHistoryActivity" />


        <!--   Cart product-->
        <activity android:name=".controller.Cart.CartActivity" />
        <activity android:name=".controller.Cart.CheckoutActivity" />
        <activity android:name=".controller.Cart.ChooseToppingActivity" />

