<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="#2196F3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoi Dev"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giakhoi.dev@gmail.com"
                android:textColor="#E0E0E0"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Body Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:background="@drawable/bg_top_rounded_card"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Thông tin"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Item 1: Hồ sơ -->
            <include
                android:id="@+id/rowProfile"
                layout="@layout/item_profile_row" />

            <!-- Item 2: Cộng đồng -->
            <include
                android:id="@+id/rowCommunity"
                layout="@layout/item_profile_row" />

            <!-- Item 3: Lịch trình -->
            <include
                android:id="@+id/rowSchedule"
                layout="@layout/item_profile_row" />

            <!-- Item 4: Đăng xuất -->
            <include
                android:id="@+id/rowLogout"
                layout="@layout/item_profile_row" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
