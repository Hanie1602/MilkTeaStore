    <!-- Most Popular label -->
    <TextView
        android:id="@+id/tvMostPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Popular"
        android:textSize="16sp"
        android:textColor="#1C1B1F"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/hsCategories"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Horizontal list of Most Popular cards -->
    <HorizontalScrollView
        android:id="@+id/hsMostPopular"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvMostPopular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llMostPopular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWintermelon"
                android:layout_width="140dp"
                android:layout_height="203dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="204dp">

                    <ImageView
                        android:id="@+id/imgWintermelon"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:contentDescription="Cold Wintermelon Bubble Tea in clear cup with ice and black pearls"
                        android:scaleType="fitCenter"
                        android:src="@drawable/milktea_1" />

                    <TextView
                        android:id="@+id/tvWintermelonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgWintermelon"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="9dp"
                        android:text="Wintermelon"
                        android:textColor="#1C1B1F"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWintermelonPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgWintermelon"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="47dp"
                        android:text="₱ 80.00"
                        android:textColor="#1C1B1F"
                        android:textSize="14sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardJavaChip"
                android:layout_width="140dp"
                android:layout_height="203dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="198dp">

                    <ImageView
                        android:id="@+id/imgJavaChip"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:contentDescription="Cold Java Chip Frappe with whipped cream and chocolate chips on top"
                        android:scaleType="fitCenter"
                        android:src="@drawable/milktea_1" />

                    <TextView
                        android:id="@+id/tvJavaChipName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgJavaChip"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:text="Java Chip Frappe"
                        android:textColor="#1C1B1F"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvJavaChipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgJavaChip"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="47dp"
                        android:text="₱ 90.00"
                        android:textColor="#1C1B1F"
                        android:textSize="14sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Recommendation Label -->
    <TextView
        android:id="@+id/tvRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendation"
        android:textSize="16sp"
        android:textColor="#1C1B1F"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hsMostPopular"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Horizontal list Recommendations (simplified as horizontal scroll) -->
    <HorizontalScrollView
        android:id="@+id/hsRecommendation"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvRecommendation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/llRecommendation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Recommendation item -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/milktea_1"
                    android:contentDescription="Close up cold glass with black tapioca pearls on top of milk tea"/>
            </androidx.cardview.widget.CardView>

            <!-- Another recommendation item -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/milktea_1"
                    android:contentDescription="Cream puff pastry dessert on white plate"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:paddingBottom="-20dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>